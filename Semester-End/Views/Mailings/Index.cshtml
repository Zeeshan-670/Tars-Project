@model IEnumerable<Semester_End.Models.Mailing>

@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}



<!-- Begin page -->
<div id="wrapper">


    <div class="content-page">
        <div class="content">

            <!-- Start Content-->
            <div class="container-fluid">

                <div class="row">

                    <div class="col-sm-12">
                        <div class="inbox-app-main">
                            <div class="row">
                                <div class="col-md-3">
                                    <aside id="sidebar" class="nano">
                                        <div class="nano-content">

                                            <div class="text-center">
                                                <a asp-action="Create" class="btn btn-danger btn-rounded width-lg waves-effect waves-light mb-2 mt-3" data-animation="fadein">Compose</a>
                                            </div>
                                            <menu class="menu-segment">
                                                <ul class="list-unstyled">
                                                    <li class="active">
                                                        <a href="javascript:void(0);">Inbox<span> (43)</span></a>
                                                    </li>
                                                    <li><a href="javascript:void(0);">Sent</a></li>
                                                    <li><a href="javascript:void(0);">Recieve</a></li>
</ul>
                                            </menu>

                                        </div>
                                    </aside>
                                </div> <!-- end col -->

                                <div class="col-md-9">

                                    <main id="main">
                                        <div class="overlay"></div>
                                        <header class="header">

                                            <h1 class="page-title">
                                                <a class="sidebar-toggle-btn trigger-toggle-sidebar">
                                                    <span class="line"></span><span class="line"></span><span class="line"></span><span class="line line-angle1"></span><span class="line line-angle2"></span>
                                                </a>
                                            </h1>

                                            <div class="action-bar float-left">
                                                <ul class="list-inline mb-0">
                                                    <li class="list-inline-item">
                                                        <a class="icon circle-icon bg-secondary"> <i class="mdi mdi-refresh text-muted"></i></a>
                                                    </li>
                                                    <li class="list-inline-item">
                                                        <a class="icon circle-icon bg-secondary"><i class="mdi mdi-share text-muted"></i></a>
                                                    </li>
                                                    <li class="list-inline-item">
                                                        <a class="icon circle-icon red bg-danger"><i class="mdi mdi-close text-danger"></i></a>
                                                    </li>
                                                    <li class="list-inline-item">
                                                        <a class="icon circle-icon red bg-danger"><i class="mdi mdi-flag text-danger"></i></a>
                                                    </li>
                                                </ul>
                                            </div>
                                            <div class="search-box float-right">
                                                <input placeholder="Search..."><span class="icon fa fa-search"></span>
                                            </div>

                                            <div class="clearfix"></div>

                                        </header>

                                        <div id="main-nano-wrapper" class="nano">
                                            <div class="nano-content">
                                                <ul class="message-list">
                                                    @foreach (var item in Model)
                                                    {
                                                        <li class="orange-dot">
                                                            <div class="mail-col mail-col-1">
                                                                <span class="dot"></span>
                                                                <a class="checkbox-wrapper-mail" asp-action="Details" asp-route-id="@item.Id">
                                                                    <input type="checkbox" id="chk8" />
                                                                    <a asp-action="Details" asp-route-id="@item.Id"><label for="chk8" class="toggle"></label></a>
                                                                </a>
                                                                <p class="title"> @Html.DisplayFor(modelItem => item.To)</p><span class="star-toggle far fa-star"></span>
                                                            </div>
                                                            <div class="mail-col mail-col-2">
                                                                <div class="subject">
                                                                    @Html.DisplayFor(modelItem => item.Subject) &nbsp;&ndash;&nbsp;
                                                                    <span class="teaser"> @Html.DisplayFor(modelItem => item.Text)</span>
                                                                </div>
                                                                <div class="date">Feb 29</div>
                                                            </div>
                                                        </li>
                                                    }
                                            
                                            </ul>
</div>
                                        </div>
                                    </main>
                                    <div class="col-md-9">
                                        <div id="message">
                                            <div class="header">
                                                <h4 class="page-title">
                                                    <a class="icon circle-icon mdi mdi-close text-muted trigger-message-close"></a>Process<span class="grey">(6)</span>
                                                </h4>
                                                <p>
                                                    From <a href="#">You</a> to <a href="#">Scott Waite</a>, started on <a href="#">March 2, 2014</a> at 2:14 pm est.
                                                </p>
                                            </div>
                                            <div id="message-nano-wrapper" class="nano">
                                                <div class="nano-content">
                                                    <ul class="message-container list-unstyled">
                                                        <li class="received">
                                                            <div class="details">
                                                                <div class="left">
                                                                    Scott
                                                                    <div class="arrow orange"></div>
                                                                    You
                                                                </div>
                                                                <div class="right">March 6, 2014, 20:08 pm</div>
                                                            </div>
                                                            <div class="message">
                                                               
                                                                <p>
                                                                    @Html.DisplayNameFor(model => model.Subject)  ::  
                                                                </p>

                                                                <p>
                                                                    @Html.DisplayNameFor(model => model.Subject)  ::  
                                                                </p>
                                                                <p>
                                                                    @Html.DisplayNameFor(model => model.Text)  ::    

                                                                </p>
                                                                
                                                                </div>
                                                            <div class="tool-box">
                                                                <a asp-action="Index" class="circle-icon small mdi mdi-share"></a>
                                                                <a href="#" class="circle-icon small red-hover mdi mdi-close"></a>
                                                                <a href="#" class="circle-icon small red-hover mdi mdi-flag"></a>
                                                            </div>
                                                        </li>

                                                    </ul>

                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </div> <!-- end col -->
                            </div><!-- end row -->
                        </div>

                    </div>

                </div>
                <!-- End row -->


            </div> <!-- container-fluid -->

        </div> <!-- content -->



    </div>

    <!-- ============================================================== -->
    <!-- End Page content -->
    <!-- ============================================================== -->


</div>
<!-- END wrapper -->




